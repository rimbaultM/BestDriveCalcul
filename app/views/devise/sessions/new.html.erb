
<div class="fondcolor">
  <div class="container-login">
    <!--<img class="logo-login" src="https://res.cloudinary.com/dc9pm7uj8/image/upload/v1602677470/logo_hfbbqn.png" alt="">-->
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs input-login">
        <%#= f.input :name,
                    required: false, label: "Nom d'utilisateur" %>
        <%= f.input :email,
                    required: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter",class: "login-btn" %>
      </div>
    <% end %>
    <!-- <div class="login-center">
      <%#= render "devise/shared/links" %>
    </div> -->
  </div>
</div>
