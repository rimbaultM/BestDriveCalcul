
<div class="container">
  <div class="logo-fat">
    <img src="https://res.cloudinary.com/dc9pm7uj8/image/upload/v1602678647/logoopacity_grmfql.png">
  </div>
  <div class="formulaire">
    <div class="formulaire-title">
      <h3>Données d'entrées : roue standard</h3>
    </div>

    <div class="formulaire-content">
      <div class="row">
        <div class="col-lg-6 col-12 ">


            <%= simple_form_for(@standard) do |f| %>
              <%= f.input :jantelargeur, label:"JANTES : Largueur" %>
              <%= f.input :janteexterieur, label:"JANTES : Coté exterieur" %>
              <%= f.input :jantesepaisseur, label:"JANTES : Epaisseur couronne" %>
              <%= f.input :voilecreux, label:"VOILE : Creux de voile" %>
              <%= f.input :voileepaisseur, label:"VOILE : Epaisseur" %>
              <%= f.input :fam, label:"F.A.M. : Coté exterieur" %>
              <div class="form-actions">
                <%= f.button :submit, "Calcul des voies possibles", class: "btn btn-flat formulaire-submit" %>
              </div>
            <% end %>


        </div>
      </div>
    </div>

  </div>
</div>


















